    <!-- Basic Tables start -->
    <section class="section">
        <div class="card">
            <div class="card-header">
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Type Tagihan</label>
                    <div class="col-sm-2">
                        <select class="form-control getTagihan" id="typeTagihan">
                            <option value="">Semua</option>
                            <option value="PLN">PLN</option>
                            <option value="telkom">Indihome</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Group Tagihan</label>
                    <div class="col-sm-2">
                        <select class="form-control getTagihan" id="groupTagihan">
                            <option value="">Semua</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Status</label>
                    <div class="col-sm-2">
                        <select class="form-control getTagihan" id="statusTagihan">
                            <option value="">Semua</option>
                            <option value="0">Belum dibayar</option>
                            <option value="1">Lunas</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="tagihanListrik">
                        <thead>
                            <tr>
                                <th>Group</th>
                                <th>Id Pelanggan</th>
                                <th>Nama</th>
                                <th>Jumlah Tagihan</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </section>
    <!-- Basic Tables end -->
</div>

<script src="~/extensions/jquery/jquery.min.js"></script>
<script src="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>
<script src="~/js/pages/datatables.js"></script>
<script src="~/js/tagihan/tagihan.js"></script>
<script>
    @{
        var groupTagihanInput = (List<Pulsa.ViewModel.tagihan.GroupTagihanDTO>)ViewBag.groupTagihan;
    }
    let groupTagihanInput = @Html.Raw(Json.Serialize(@groupTagihanInput));
    var htmlOptioninputGroupTagihan = "";
    for (var i = 0; i < groupTagihanInput.length; i++) {
        htmlOptioninputGroupTagihan += `<option value="${groupTagihanInput[i].group_tagihan}">${groupTagihanInput[i].group_tagihan}</option>`;
        console.log(htmlOptioninputGroupTagihan);
    }

    $(htmlOptioninputGroupTagihan).appendTo("#groupTagihan");
    
</script>