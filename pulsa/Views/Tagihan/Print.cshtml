@{
    var data = (List<Pulsa.ViewModel.VMTagihanListrik>)ViewBag.data;
    int row = 1;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
<table class="table table-striped">
    <thead>
        <tr style="align-content:center">
        <th>No</th>
        <th>No Pelanggan</th>
        <th>Nama</th>
        <th>Tagihan</th>
        <th>Admin</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in data.OrderBy(a => a.nama_pelanggan))
        {
            <tr>
                <td>@row</td>
                <td>@item.id_tagihan</td>
                <td>@item.nama_pelanggan</td>
                <td>@string.Format("{0:N0}", item.jumlah_tagihan)</td>
                <td>@string.Format("{0:N0}", item.admin_notta)</td>
                <td>@string.Format("{0:N0}", item.total)</td>
            </tr>

            row++;
        }
    </tbody>
</table>

<table class="table">
    <tr>
        <td>Total Tagihan + admin</td>
        <td>@string.Format("{0:N0}", ViewBag.jumlahPembayaran)</td>
    </tr>
    <tr>
        <td>Biaya jasa</td>
        <td>@string.Format("{0:N0}", ViewBag.biayaJasa)</td>
    </tr>
    <tr>
        <td>Yang harus disetorkan</td>
        <td>@string.Format("{0:N0}", ViewBag.setor)</td>
    </tr>
</table>